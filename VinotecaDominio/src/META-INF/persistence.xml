<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="VinotecaDominioPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Dominio.Persona</class>
    <class>Dominio.Estadopedido</class>
    <class>Dominio.Pedido</class>
    <class>Dominio.Preferencia</class>
    <class>Dominio.Abonado</class>
    <class>Dominio.Factura</class>
    <class>Dominio.Lineapedido</class>
    <class>Dominio.Lineacompra</class>
    <class>Dominio.Compra</class>
    <class>Dominio.Estadofactura</class>
    <class>Dominio.Vino</class>
    <class>Dominio.Referencia</class>
    <class>Dominio.Empleado</class>
    <class>Dominio.Bodega</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/Vinoteca"/>
      <property name="javax.persistence.jdbc.user" value="usuario"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="1234"/>
    </properties>
  </persistence-unit>
</persistence>
